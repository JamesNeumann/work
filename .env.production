# Production Configuration for work.cloud.vu
NODE_ENV=production
PORT=5000

# Domain Configuration
DOMAIN=work.cloud.vu
CLIENT_URL=https://work.cloud.vu
API_URL=https://work.cloud.vu/api

# MongoDB Configuration (Production)
MONGODB_URI=mongodb://admin:SecurePassword2024!@mongodb:27017/feature-matrix?authSource=admin

# JWT Configuration (Production)
JWT_SECRET=SuperSecureJWTSecretForProduction2024WorkCloudVu!@#$%
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=https://work.cloud.vu

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
HELMET_ENABLED=true
TRUST_PROXY=true

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/work.cloud.vu.crt
SSL_KEY_PATH=/etc/nginx/ssl/work.cloud.vu.key

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/production.log

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *